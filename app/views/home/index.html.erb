<div class="hint columns one">
  Your food is just at a click away. Choose your favorite meal and order online with FoodWagon. Enjoy the best flavors with our exclusive recipes.
</div>

<div class="columns two-thirds">
  <%= form_tag send_order_home_index_path, :method => :post do %>    	
      <% @menus.each do |menu| %>
      <div class="post">
        <!--div class="image"><a href="#"><img src="images/cook/grilled_potatoes_with_dill.jpg" alt="postimage"></a></div-->
        <div class="infopost">
          <h3><a href="#"><%= menu.name %></a></h3>
          <p><span>Price Â£</span> <a href="#"><%= menu.price %></a></p>         
        </div>
        <div class="description"><%= menu.description %></div>
        <div class="description"><%= check_box_tag 'menues[]', menu.id, params[:value] %></div>  
        <div class="clear"></div>  
      </div>
    <% end %>
    
      <div class="actions">
        <% if user_signed_in? %>
          <%= submit_tag "Send order" %>
        <% else %>
          Please login to send your order.
          <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
        <% end %>
      </div>        
    
  <% end %>
</div>

