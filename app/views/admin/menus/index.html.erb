<div class="columns one">
<br>
<h2>Listing menus</h2>
<br>
<div class="CSSTableGenerator" >
<table>  
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>Price</td>
      <td></td>
      <td></td>
      <td></td>
    </tr>  
    <% @admin_menus.each do |admin_menu| %>
      <tr>
        <td><%= admin_menu.name %></td>
        <td><%= admin_menu.description %></td>
        <td><%= admin_menu.price %></td>
        <td><%= link_to 'Show', admin_menu %></td>
        <td><%= link_to 'Edit', edit_admin_menu_path(admin_menu) %></td>
        <td><%= link_to 'Destroy', admin_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
</div>
<br>

<%= link_to 'Add a new Menu', new_admin_menu_path %>

</div>