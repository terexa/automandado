<div class="columns one">
<br>
<h2>Setting options</h2>
<br>
<div class="CSSTableGenerator" >
<table>
    <tr>
      <td>Option name</td>
      <td>Option value</td>
      <td></td>
      <td></td>
    </tr>


    <% @admin_settings.each do |admin_setting| %>
      <tr>
        <td><%= admin_setting.option_name %></td>
        <td><%= admin_setting.option_value %></td>
        <td><%= link_to 'Edit', edit_admin_setting_path(admin_setting) %></td>
        <td><%= link_to 'Destroy', admin_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
</div>

<br>

<%= link_to 'New Setting', new_admin_setting_path %>

</div>